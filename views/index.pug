extend layout

block content
    .pe-5.ps-5.pt-2
        if user
            section
                h2.text-center.p-3.felkover.feher Üdvözöllek 
                    span= user.name
                    span !
                .container
                    .row.d-flex.justify-content-center.align-items-center.pb-5
                        .col-xl-10
                            .card.rounded-3.text-black.bg-light
                                .row.g-0
                                    .col-lg-12
                                        h1.p-2 Posztolj!
                                        .container.pb-3.col-xl-11
                                            form(method="POST", action="/chat/" + user.id + "/public_post")
                                                textarea(name="text", rows="5" placeholder="Ide azt írsz, amit akarsz" required="true").form-control.lmfao.textareadetails.rounded
                                                input(type="submit", name="submitpost" value="Posztolás").btn.btn-primary.btn-lg.m-2
                    
                    if posts
                        .row.d-flex.justify-content-center.align-items-center
                            .col-xl-10
                                .card.rounded-3.text-black.bg-light
                                    .row.g-0
                                        .col-lg-12.p-2.pt-4
                                            for post in posts
                                                .container.hatter.rounded-3.mb-3
                                                    .container.border-bottom.divfont.p-1
                                                        img(src='images/profiles/avatar1.png', alt='logo').avatarkep
                                                        p.felkover.inlineblock.ps-1
                                                            a(href="/user/" + post.user_id + "/s")= post.name
                                                    
                                                    .dropdown
                                                        button.btn.btn-outline-primary.btn-sm.dropdown-toggle(id="postdd-"+post.post_id href="#" type="button" data-bs-toggle="dropdown" aria-expanded="false")
                                                            | 

                                                        ul.dropdown-menu(aria-labelledby="postdd-"+post.post_id)
                                                            li
                                                                a(href="/chat/"+post.post_id+"/delete").post-del-btn.dropdown-item Törlés
                                                                //form(method="POST" action="/chat/"+post.post_id+"/delete")
                                                                    input(type="submit" value="Törlés").post-del-btn.dropdown-item

                                                    .container.divfont.pt-1.ps-3
                                                        p= post.message
                                                        
