extends layout 

block content 
    section.section-white
        .row
            .col-sm
                h1.fw-bold
                    i.fas.fa-calendar.me-2
                    span= event.name
            .col-sm-2
                if event.is_user_editor
                    a.btn.btn-primary(href="/event/"+event.id+"/edit")
                        i.fas.fa-edit.me-2
                        | Szerkesztés
                else if event.is_user_attending
                    a.btn.btn-outline-danger(href="/event/"+event.id+"/unattend") Részvétel törlése
                else if !event.is_user_attending
                    a.btn.btn-primary(href="/event/"+event.id+"/attend") Részvétel jelzése!

        hr

        br
        p.event-desc= event.text
        br

        h2.fw-bold.mt-2.mb-3
            i.fas.fa-calendar.me-2
            | Dátum
        hr
        br
        p.event-desc= event.event_date
        br

        h2.fw-bold.mt-2.mb-3
            i.fas.fa-users.me-2
            | Résztvevők
        
        hr

        if attendants.length != 0
            for user in attendants
                include part_user
        else 
            p(style="font-style: italic;").text-muted Légy te az első!

    div(style="margin-bottom:500px;")
