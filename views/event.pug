extends layout 

block content 
    section.section-white
        .row
            .col-sm
                h1.fw-bold
                    i.fas.fa-calendar.me-2
                    span= event.event_name
            .col-sm-2
                if event.is_user_editor
                    a.btn.btn-primary(href="/event/"+event.event_id+"/edit")
                        i.fas.fa-edit.me-2
                        | Szerkesztés
                else if event.is_user_attending
                    a.btn.btn-outline-danger(href="/event/"+event.event_id+"/unattend") Részvétel törlése
                else if !event.is_user_attending
                    a.btn.btn-primary(href="/event/"+event.event_id+"/attend") Részvétel jelzése!

        hr

        br
        p= event.event_text
        br

        h2.fw-bold.mt-2.mb-3
            i.fas.fa-calendar.me-2
            | Dátum
        hr
        br
        p.event-desc= event.event_date
        br

        h2.fw-bold.mt-2.mb-3
            i.fas.fa-users.me-2
            | Résztvevők
        
        hr

        if attendants.length != 0
            for user in attendants
                include part_user
        else 
            p(style="font-style: italic;").text-muted Légy te az első!
        
        hr
        h2.fw-bold.mt-2.mb-3
            i.fas.fa-comments.me-2
            | Kommentek
        ul(style="list-style: none;")
            for post in event
                include part_comment
            
        form(method="POST", action="/comment/"+ event.event_id +"/create")  // event_id -> for ciklusban
            .row.small.mt-1.ps-5.pe-5
                .col-sm-10
                    input(type="text", name="text", placeholder="Ide írhatod a kommentedet").form-control
                .col-sm-2 
                    input(type="submit", value="Kommentelés!").btn.btn-primary


    div(style="margin-bottom:500px;")
