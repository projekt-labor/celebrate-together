extends layout 

block content
    section.section-white
        h1.fw-bold
            <i class="fas fa-calendar-plus me-2"></i>
            | Esemény meghirdetése
        hr

        div(class="container-fluid")
            .row
                .col-sm-4 
                    span
                form(action="/event/create", method="POST").col-sm-4
                    br
                    label(for="name") Az esemény neve:
                    input(type="text", name="name", placeholder="Az esemény neve", required="ture", value="").form-control

                    br
                    label(for="text") Az esemény leírása:
                    textarea(type="text", name="text", placeholder="Az esemény leírása", required="ture", value="", rows="4").form-control

                    br
                    label(for="place") Az esemény helyszine:
                    input(type="text", name="place", placeholder="Az esemény helyszine", required="ture", value="").form-control

                    br
                    label(for="event_date") Az esemény dátuma:
                    input(type="date", name="event_date", placeholder="Az esemény dátuma", required="ture", value="").form-control

                    br
                    input(type="submit", name="submit" value="Meghirdetés").btn.btn-primary
                .col-sm-4 
                    span
        
    div(style="margin-bottom:500px;")
